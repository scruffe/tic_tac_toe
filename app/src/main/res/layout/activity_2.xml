<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg9"
    tools:context=".Activity2">

    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/header2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/game_box"

        >
        <FrameLayout
            android:id="@+id/gm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp">
            <LinearLayout
                android:id="@+id/linearLayoutgm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:visibility="visible"

                >
                <TextView
                    android:id="@+id/gamemode_header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/gamemode"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/timer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/placeholder_time"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout></FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="120dp">

            <LinearLayout
                android:id="@+id/linearLayouths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                tools:visibility="visible">

                <TextView
                    android:id="@+id/highscore_header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:text="@string/highscore"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/highscore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:text="@string/highscore_text"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linearLayoutscore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                tools:visibility="visible"
                >
                <TextView
                    android:id="@+id/score_header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/score"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/score_text"
                    android:layout_marginEnd="2dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>



    <!--title text-->
    <!--images of the grid boxes-->

    <!--image of the grid-->

    <FrameLayout
        android:id="@+id/game_box"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:padding="20sp"
        android:scaleX="0.9"
        android:scaleY="0.9"
        app:layout_constraintBottom_toTopOf="@+id/restart_button"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header2">

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <LinearLayout
            android:contentDescription="@string/game_box"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:visibility="visible">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <pl.droidsonroids.gif.GifImageView

                    android:id="@+id/imageView0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/top_l"
                    android:foregroundTintMode="src_in"
                    android:onClick="playerTap"
                    android:padding="20sp"
                    android:tag="0"
                    android:visibility="visible"
                    app:srcCompat="@drawable/bubble2" />

                <pl.droidsonroids.gif.GifImageView

                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/top_m"
                    android:onClick="playerTap"
                    android:padding="20sp"
                    android:tag="1" />

                <pl.droidsonroids.gif.GifImageView

                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/top_r"
                    android:onClick="playerTap"
                    android:padding="20sp"
                    android:tag="2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/middle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                android:orientation="horizontal">

                <pl.droidsonroids.gif.GifImageView

                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/mid_l"
                    android:onClick="playerTap"
                    android:padding="20sp"
                    android:tag="3" />

                <pl.droidsonroids.gif.GifImageView

                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/mid_c"
                    android:onClick="playerTap"
                    android:padding="20sp"
                    android:tag="4" />

                <pl.droidsonroids.gif.GifImageView

                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/mid_r"
                    android:onClick="playerTap"
                    android:padding="20sp"
                    android:tag="5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <pl.droidsonroids.gif.GifImageView

                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/bot_l"
                    android:onClick="playerTap"
                    android:padding="20sp"
                    android:tag="6" />

                <pl.droidsonroids.gif.GifImageView

                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/bot_c"
                    android:onClick="playerTap"
                    android:padding="20sp"
                    android:tag="7" />

                <pl.droidsonroids.gif.GifImageView

                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/bot_r"
                    android:onClick="playerTap"
                    android:padding="20sp"
                    android:tag="8" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <!--game status text display-->
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/game_box"
        app:layout_constraintEnd_toEndOf="@id/game_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/game_box" />

    <ImageButton
        android:id="@+id/mute_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/unmute"
        android:contentDescription="@string/mute"
        android:onClick="muteSoundEffects"
        android:padding="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton

        android:id="@+id/restart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="15sp"
        android:background="@drawable/restartarrow"

        android:contentDescription="@string/button_restart"
        android:onClick="restartGame"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintDimensionRatio="H,6:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/header2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mute_button"
        app:layout_constraintTop_toTopOf="parent">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/heart1"
            android:layout_width="62dp"
            android:layout_height="61dp"
            app:srcCompat="@drawable/heart"/>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/heart2"
            android:layout_width="62dp"
            android:layout_height="61dp"

            app:srcCompat="@drawable/heart" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/heart3"
            android:layout_width="62dp"
            android:layout_height="61dp"
            app:srcCompat="@drawable/heart" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/heart4"
            android:layout_width="62dp"
            android:layout_height="61dp"
            app:srcCompat="@drawable/heart" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>